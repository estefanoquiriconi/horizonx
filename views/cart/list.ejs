      <%- include('./partials/summary.ejs', { cart }) %>
    </main>
    <%- include('../partials/footer.ejs') %>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="/js/confirmBuy.js"></script>
  </body>
</html>
