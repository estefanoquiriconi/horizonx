<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head.ejs', {title: 'Carrito', styles:
    '/css/cart2.css'}) %>
  </head>
  <body>
    <%- include('../partials/header.ejs') %>
    <main class="container-cart">
      <div class="container-items">
        <% cart.items.forEach(item => { %> <%- include('./partials/item.ejs',
